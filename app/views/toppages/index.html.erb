<% if user_signed_in? %>
  <div id="log_after">
    <div class="row">
      <aside id="name_card" class="col-sm-4">
        <div class="card">
          <div class="card-header">
            <%= current_user.name %>
          </div>
          <div class="card-body">
            <div class="p_edit"><%= link_to 'プロフィールを編集', edit_user_path(current_user) %></p>

            <div class="p_comment">
              <%=  simple_format(current_user.comment) %>
            </div>

            <% if current_user.image.attached? %>
              <div id="user_image">
                <%= image_tag current_user.image %>
              </div>
            <% end %>

          </div>
        </div>
      </aside>
      <div class="col-sm-8">
        <ul class="nav nav-tabs nav-justified mb-3">
          <li class="nav-item"><a href="#" class="nav-link">POST</a></li>
          <li class="nav-item"><a href="#" class="nav-link">フォロー</a></li>
          <li class="nav-item"><a href="#" class="nav-link">フォロワー</a></li>
        </ul>
      </div>
    </div>
  </div>  
<% else %>
  <div class="t_page">
    <div id="toppage" class="jumbotron">
      <div class="text-center">
        <h1>好きな映画を共有しよう</h1>
      </div>
    </div>
    <div id="btn" class="text-center">
      <div class="btn-group-vertical">
        <%= link_to '新規登録', new_user_registration_path, class: 'btn btn-primary' %>
        <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <%= render 'shared/footer' %>
  </div>
<% end %>

