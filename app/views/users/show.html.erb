

<div id="s_users">
  <div class="row">
    <aside id="name_card" class="col-sm-4">
      <div class="card">
        <div class="card-header">
          <%= @user.name %>
        </div>
        <div class="card-body">

          <% if current_user == @user %>
            <div class="p_edit"><%= link_to 'プロフィールを編集', edit_user_path(current_user) %></div>
          <%end%>

          <div class="p_comment">
            <%=  simple_format(@user.comment) %>
          </div>

          <% if @user.image.attached? %>
            <div id="user_image">
              <%= image_tag @user.image %>
            </div>
          <% end %>

        </div>
      </div>
    </aside>
    <div class="col-sm-8">
      <ul class="nav nav-tabs nav-justified mb-3">
        <li class="nav-item"><a href="#" class="nav-link">POST</a></li>
        <li class="nav-item"><a href="#" class="nav-link">フォロー</a></li>
        <li class="nav-item"><a href="#" class="nav-link">フォロワー</a></li>
      </ul>
    </div>
  </div>
</div>  